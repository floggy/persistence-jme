
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.sourceforge.floggy</groupId>
		<artifactId>floggy</artifactId>
		<version>1.0</version>
	</parent>
    <artifactId>floggy-persistence-demo</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>Hospital-ME</name>
	<description>A demo application using Floggy persistence framework.</description>
	<dependencies>
		<dependency>
			<groupId>net.sourceforge.floggy</groupId>
			<artifactId>floggy-persistence-framework</artifactId>
			<version>1.0-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>javax.microedition</groupId>
			<artifactId>midpapi</artifactId>
			<version>2.0</version>
			<scope>system</scope>
			<systemPath>${wtk.home}/lib/midpapi20.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>javax.microedition</groupId>
			<artifactId>cldcapi</artifactId>
			<version>1.1</version>
			<scope>system</scope>
			<systemPath>${wtk.home}/lib/cldcapi11.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>floggy.png</include>
				</includes>
				<targetPath>/</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestEntries>
							<MIDlet-1>Hospital ME, floggy.png, net.sourceforge.floggy.persistence.HospitalMIDlet</MIDlet-1>
							<MIDlet-Name>${jme.midlet.name}</MIDlet-Name>
							<MIDlet-Vendor>${jme.midlet.vendor}</MIDlet-Vendor>
							<MIDlet-Version>${jme.midlet.version}</MIDlet-Version>
							<MicroEdition-Configuration>
								${jme.midlet.configuration}
							</MicroEdition-Configuration>
							<MicroEdition-Profile>${jme.midlet.profile}</MicroEdition-Profile>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>net.sourceforge.floggy</groupId>
				<artifactId>maven-floggy-plugin</artifactId>
				<version>1.0-SNAPSHOT</version>
				<executions>
					<execution>
						<id>1</id>
						<goals>
							<goal>weaver</goal>
						</goals>
						<phase>process-classes</phase>
					</execution>
					<execution>
						<id>2</id>
						<configuration>
							<embbededFinalName>hospital-me</embbededFinalName>
						</configuration>
						<goals>
							<goal>package</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>j2me-maven-plugin</artifactId>
				<configuration>
					<midletVersion>${jme.midlet.version}</midletVersion>
					<midletVendor>${jme.midlet.vendor}</midletVendor>
					<midletName>${jme.midlet.name}</midletName>
					<j2meProfile>${jme.midlet.profile}</j2meProfile>
					<j2meConfiguration>${jme.midlet.configuration}</j2meConfiguration>
				</configuration>
				<executions>
					<execution>
						<configuration>
							<sdkPath>${wtk.home}</sdkPath>
						</configuration>
						<goals>
							<goal>preverify</goal>
							<goal>create-jad</goal>
						</goals>
						<phase>process-classes</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.3</source>
					<target>1.3</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<jme.midlet.vendor>${project.organization.name}</jme.midlet.vendor>
		<jme.midlet.name>${project.name}</jme.midlet.name>
		<jme.midlet.version>1.0</jme.midlet.version>
		<jme.midlet.configuration>CLDC-1.1</jme.midlet.configuration>
		<jme.midlet.profile>MIDP-2.0</jme.midlet.profile>
	</properties>
</project>
